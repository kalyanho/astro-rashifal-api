name: Daily Rashifal Auto Update
on:
  schedule:
    - cron: '0 23 * * *' # रोज़ 4:30am IST (UTC +5:30)
jobs:
  update:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - name: Update Rashifal JSON
        run: |
          echo '{"date":"'"$(date +%F)"'","मेष":"आज का राशिफल..."}' > rashifal.json
      - name: Commit and Push
        run: |
          git config user.name "AutoBot"
          git config user.email "bot@example.com"
          git add rashifal.json
          git commit -m "Auto update rashifal"
          git push
